                <>
                  {/* Header */}
                  <View style={styles.modalHeader}>
                    <View style={{ flexDirection: 'row', alignItems: 'center', gap: 12 }}>
                      <View style={[styles.modalIcon, { backgroundColor: (metal?.color || '#64748b') + '20' }]}>
