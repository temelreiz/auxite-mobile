                        <Text style={[styles.detailLabel, { color: isDark ? '#94a3b8' : '#64748b' }]}>{t.amount}</Text>
                        <Text style={[styles.detailValue, { color: metal?.color }]}>{selectedAllocation.grams}g</Text>
